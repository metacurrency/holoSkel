#!/bin/sh
echo #!/bin/sh $0
sleep 1

hackyCheatSync="/chain.seeded/devchain"
/Scripts/cluster/sync  $hackyCheatSync

seedID=`cat /chain.seeded/devchain/.seedID`
clusterDir="/chain.seeded/devchain/cluster/$seedID"

echo "Seed host name: $seedID"
echo "My host name: $HOSTNAME"

mkdir $clusterDir/hc
touch $clusterDir/hc/$HOSTNAME

/Scripts/cluster/sync $clusterDir

echo "$HOSTNAME > sync completed"

$clusterDir/hc/$HOSTNAME
